    <script>
        $(function () {
            if ('@passwordIssue'=='True')
            {
                ShowMessage("warning", "warning", "Invalid Username or Password");
            }
            if ('@expiry' == 'True') {
                ShowMessage("warning", "warning", "Sorry !! Your Login is Deactivated. Please Contact to your Administrator!!");
            }
            $('#enquiry-form').ajaxForm({
                beforeSubmit: function () {
                    if ($('#InquiryBy').val().length < 5) {
                        ShowMessage("warning", "warning", "Please Fill Valid Name");
                        return false;
                    }
                    if ($('#ContactNumber').val().length < 5) {
                        ShowMessage("warning", "warning", "Please Fill Valid Contact Number");
                        return false;
                    }
                    $('#enquiry-form').removeData("validator").removeData("unobtrusiveValidation");
                    $.validator.unobtrusive.parse($('#enquiry-form'));
                    if ($("#enquiry-form").valid()) {
                        WorkForce.loader.show();
                    } else {
                        return false;
                    }
                },
                success: function (result) {
                    if (result.Success) {
                        WorkForce.loader.hide();
                        $('#InquiryBy').val('');
                        $('#Email').val('');
                        $('#ContactNumber').val('');
                        ShowMessage("success", "success", result.Msg);
                    } else {
                        WorkForce.loader.hide();
                        ShowMessage("error", "error", result.Msg);
                    }
                },
                error: function () {
                    WorkForce.loader.hide();
                    ShowMessage("error", "error", "error in registration!!");
                }
            });
            $('#login-password').on('keydown', function (e) {
                if (e.keyCode == 13)
                    $('#btn-login').click();
            })
        });
    </script>
